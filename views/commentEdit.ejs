<%- include('partials/header.ejs') %>

<div class="container mt-5">
		<h1 style="text-align: center;" class="m-5">Editing the comment</h1>
		<div style="width:30%; margin:0 auto;">
			<form method='POST' action='/activities/<%= activity_id %>/comments/<%= comment._id %>?_method=PUT'>
				<div class="form-group">
					<input class="form-control" type='text' name='comment[text]' value="<%= comment.text %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
		</div>
	</div>
</div>

