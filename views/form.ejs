<%- include('partials/header.ejs') %>

<div class="container mt-5">
		<h1 style="text-align: center;" class="m-5">Create a new Activity</h1>
		<div style="width:30%; margin:0 auto;">
			<form method='POST' action='/activities'>
				<div class="form-group">
					<input class="form-control" type='text' name='activityName' placeholder='Activity Name'>
				</div>
				<div class="form-group">
					<input class="form-control" type='text' name='imgLink' placeholder='Image URL'>
				</div>
				<div class="form-group">
					<input class="form-control" type='number' name='price' placeholder='Price In Dollars' min="2">
				</div>
				<div class="form-group">
					<input class="form-control" type='text' name='location' placeholder='Location'>
				</div>
				<div class="form-group">
					<input class="form-control" type='text' name='desc' placeholder='Description'>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
		</div>
	</div>
</div>

<%- include('partials/footer.ejs') %>